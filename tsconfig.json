{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",  // Changed from "bundler" for Node.js compatibility
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "src",  // Added: Enables absolute imports like 'routes/authRoutes'
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}